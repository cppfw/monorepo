{
  "version": 10,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 23,
    "patch": 0
  },
  "configurePresets": [
    {
      "$comment": [
        "base preset"
      ],
      "hidden": true,
      "name": "base",
      "description": "Base preset to be inherited by all presets",
      "binaryDir": "${sourceDir}/../../out/${presetName}/"
    },
    {
      "name": "native",
      "inherits": "base",
      "description": "host platform native config, not cross-building"
    },
    {
      "name": "ios",
      "inherits": "base",
      "description": "cross-building on macos for ios",
      "generator": "Xcode",
      "cacheVariables": {
        "CMAKE_SYSTEM_NAME": "iOS"
      }
    }
  ],
  "buildPresets": [
    {
      "$comment": [
        "base preset"
      ],
      "hidden": true,
      "name": "base",
      "jobs": 0
    },
    {
      "$comment": [
        "native-base preset"
      ],
      "hidden": true,
      "name": "native",
      "inherits": "base",
      "configurePreset": "native"
    },
    {
      "$comment": [
        "ios-base preset"
      ],
      "hidden": true,
      "name": "ios",
      "inherits": "base",
      "configurePreset": "ios",
      "nativeToolOptions": [
        "-sdk", "iphonesimulator",
        "-arch", "arm64"
      ]
    },
    {
      "name": "rel",
      "description": "native release build",
      "inherits": "native",
      "configuration": "Release"
    },
    {
      "name": "dbg",
      "description": "native debug build",
      "inherits": "native",
      "configuration": "Debug"
    },
    {
      "name": "ios-rel",
      "description": "ios release build",
      "inherits": "ios",
      "configuration": "Release"
    },
    {
      "name": "ios-dbg",
      "description": "ios debug build",
      "inherits": "ios",
      "configuration": "Debug"
    }
  ]
}
